#!/bin/bash

TIMEOUTCMD=$(which timeout)
if [ -n "$TIMEOUTCMD" ]; then
  TIMEOUTCMD="$TIMEOUTCMD -k 45 30"
fi

$TIMEOUTCMD /usr/bin/knife node   delete <%= @node_name %> -c /etc/chef/client.rb -y
$TIMEOUTCMD /usr/bin/knife client delete <%= @node_name %> -c /etc/chef/client.rb -y

rm -f /etc/chef/client.pem

exit 0
